
<div class="container">
	<div class="jumbotron" align="center">
		<h2>Admin Signup</h2>
		<%= render('partials/alerts') %>

		<%= simple_form_for @admin, html: { class: 'form-horizontal', multipart: true } do |f| %>
		<div class="form-group">
			<%= f.input :email %>
		</div>
		<div class="form-group text-center">
			<%= f.input :name %>
		</div>
		<div class="form-group text-center">
			<%= f.input :password %>
		</div>
		<div class="form-group text-center">
			<%= f.input :password_confirmation %>
		</div>
		<div class="form-group text-center">
			<%= f.button :submit, class: 'btn-success' %>
		</div>
		<% end %>


	</div>
</div>
		<h2>Add Ambulance User</h2>

		<%= simple_form_for @ambulance_user, html: { class: 'form-horizontal', multipart: true } do |f| %>
		<div class="form-group">
			<%= f.input :email %>
		</div>
		<div class="form-group text-center">
			<%= f.input :name %>
		</div>
		<div class="form-group text-center">
			<%= f.input :belongs_to %>
		</div>
		<div class="form-group text-center">
			<%= f.input :password %>
		</div>
		<div class="form-group text-center">
			<%= f.input :password_confirmation %>
		</div>
		<div class="form-group text-center">
			<%= f.button :submit, class: 'btn-success' %>
		</div>
		<% end %>
<div class="ambulance_user-wrapper row">
  <div class="ambulance_user">

    <div class="text-center">
      <%= @bed.name %>
    </div>

    <div class="text-center edit-links">
      <%= link_to "Cancel", hospital_super_user_home_path %>
      |
      <%= link_to "Edit Bed", bed_edit_path(@bed) %>
    </div>
    <div class="text-center edit-links">
      <%= link_to "Delete Bed", bed_path(@bed), method: :delete, data: { confirm: "Are you sure you want to delete this bed?" } %>
    </div>

  </div>
</div>

<% @requests.each_slice(4) do |slice| %>
<div class="row">
	<% slice.each do |request| -%>
	<div class="col-md-3">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<div class="row">
					<div class="col-md-12">
						<i class="fa fa-tasks"> </i><span> Incoming Request # <%= request.id %></span>
					</div>
				</div>
			</div>
			<a href="#">
				<div class="panel-footer">
					<span class="pull-left">Completed</span>
					<span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
					<div class="clearfix"></div>
				</div>
			</a>
		</div>
	</div>	
	<% end -%> <!-- for -->
</div>
<% end -%> <!-- for -->
<h3>Add Manager</h3>
<%= simple_form_for @manager, url: manager_add_path do |f| %>

<div class="form-group">
	<%= f.input :user_name %>
</div>
<div class="form-group text-center">
	<%= f.input :password %>
</div>
<div class="form-group text-center">
	<%= f.input :password_confirmation %>
</div>

<div class="form-group text-center">
	<%= f.button :submit, class: 'btn-success' %>
</div>
<% end %>
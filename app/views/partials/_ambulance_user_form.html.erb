<%= simple_form_for @ambulance_user, html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div class="form-group text-center">
      <%= f.input :name %>
    </div>
    <div class="form-group text-center">
      <%= f.input :email %>
    </div>
    <div class="form-group text-center">
      <%= f.input :belongs_to %>
    </div>
    <div class="form-group text-center">
      <%= f.button :submit, class: 'btn-success' %>
    </div>
<% end %>
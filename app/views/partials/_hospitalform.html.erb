<%= simple_form_for @hospital, html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div class="form-group">
      <%= f.input :logo %>
    </div>
    <div class="form-group text-center">
      <%= f.input :name %>
    </div>
    <div class="form-group text-center">
      <%= f.input :address %>
    </div>
    <div class="form-group text-center">
      <%= f.button :submit, class: 'btn-success' %>
    </div>
<% end %>